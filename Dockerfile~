FROM nieleyde/rpi-nodered-gpio:latest

RUN sudo apt-get install g++ gcc make -y
RUN cd ~
RUN git clone git://git.drogon.net/wiringPi
RUN cd wiringPi && ./build
RUN cd ~
RUN git clone --recursive git://github.com/ninjablocks/433Utils.git
RUN cd 433Utils/RPi_utils && make
RUN sudo ln -s $PWD/send /usr/bin/send
